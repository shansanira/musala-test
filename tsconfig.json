{
  "compilerOptions": {
    "lib": [
      "es2019",
      "dom"
    ],
    "target": "es2019",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "dist",
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
  ]
}
